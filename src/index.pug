mixin btnBorder(name)
    a.btn.btnBorder=name
mixin btnFill(name)
    a.btn.btnFill=name
mixin btnLong(name)
    a.btn.btnLong=name
mixin textField(id,ph)
    label(for=id) 
    input(class="textfield", type="text", name=id, placeholder=ph, id=id)
mixin radioButton(id, content, name)
    input(class="radioButton", type="radio" id=id name=name)
    label(for=id)=content
mixin maskedTextfield(id, ph)
    label(for=id) 
    input(class="textfield", type="text", placeholder=ph, id=id, pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}")
mixin emailField(id, ph)
    label(for=id) 
    input(class="textfield", type="email", name=id, placeholder=ph, id=id)
mixin passwordField(id, ph)
    label(for=id) 
    input(class="textfield", type="password", name=id, placeholder=ph, id=id)
mixin toggleButton(id)
    .toggleButton 
        input(type="checkbox" id=id style="display:none")
        label(for=id class="toggle")
            span

