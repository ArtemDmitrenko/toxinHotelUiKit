mixin card-search-room({header='header', buttonLongStyle='long', buttonLongContent='Long Template', searchRef='./search.html'}={})    
    .card-search-room
        h1.card-search-room__header=header
        .card-search-room__flex-wrapper
            +two-input-range()
        .card-search-room__dropdown-guest
            h3.card-search-room__headline гости
            +dropdown-guest("Сколько гостей")
        +button(buttonLongStyle, buttonLongContent, searchRef)

