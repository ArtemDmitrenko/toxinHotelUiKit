mixin footer-big(data)
    .footer-big
        .wrapper
            .footer-big__main
                .footer-big__logo
                    a.header__logo(href="#") 
                        img.header__logo-img(src=require("./components/footer-big/color-logo.svg"), alt="Main Logo")
                    p.footer-big__logo-content= data.logoContent       
                .footer-big__menus
                    each item in data.list
                        .footer-big__list
                            h3.footer-big__headline= item.header
                            ul.footer-big__list
                                each i in item.itemList
                                    li.footer-big__list-item
                                        a(href="").footer-big__list-ref=i
                .footer-big__subscribe
                    h3.footer-big__headline=data.subscribeHeadline
                    p.footer-big__subscribe-content=data.subscribeContent 
                    +email-subscribe(data.emailId, data.emailPlaceholder)
            .footer-big__copyright
                p.footer-big__copyright-content=data.copyrightContent 
                .footer-big__social 
                    a(href="").footer-big__twitter 
                    a(href="").footer-big__facebook 
                    a(href="").footer-big__instagram

