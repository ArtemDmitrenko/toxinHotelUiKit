mixin footer-big({logoContent='logo here', list={}, subscribeHeadline='subscribe', subscribeContent='sub content', emailId='email', emailPlaceholder='email placeholder', copyrightContent='copyright'}={})
    .footer-big
        .footer-big__wrapper
            .footer-big__main
                .footer-big__logo
                    a.footer-big__header(href="#") 
                        img.footer-big__header-logo-img(src=require("../components/footer-big/color-logo.svg"), alt="Main Logo")
                    p.footer-big__header-logo-content= logoContent       
                .footer-big__menus
                    each item in list
                        .footer-big__list
                            h3.footer-big__headline= item.header
                            ul.footer-big__list
                                each i in item.itemList
                                    li.footer-big__list-item
                                        a(href="").footer-big__list-ref=i
                .footer-big__subscribe
                    h3.footer-big__headline=subscribeHeadline
                    p.footer-big__subscribe-content=subscribeContent 
                    +email-subscribe(emailId, emailPlaceholder)
            .footer-big__copyright
                p.footer-big__copyright-content=copyrightContent 
                .footer-big__social 
                    a(href="").footer-big__twitter 
                    a(href="").footer-big__facebook 
                    a(href="").footer-big__instagram

