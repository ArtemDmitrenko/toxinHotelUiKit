mixin forms(data)
        .flex-wrapper
            .form-text
                h3.form-text__headline Text field
                +textfield(data.textfieldId, data.textfieldPlaceholder, data.textfieldType)
                .dropdownRooms
                form(action="#").dropdown
                    h3.form-text__headline Dropdown
                    +dropdown-room("Параметры комнаты")
            .masked-text
                h3.maskedText__headline Masked Textfield
                +masked-textfield(data.maskedTextId, data.maskedTextPlaceholder)
        .flex-wrapper   
            .date
                h3.date__headline Data Dropdown
                .data-dropdown
                +data-dropdown()
            .filter-dropdown
                label(for="") 
                    h3.filter-dropdown__headline Filter Dropdown
                +data-dropdown-filter()    
            .email-subscription-field
                h3.email-subscription-field__header subscription textfield
                .email-subscribe-margin
                    +email-subscribe(data.emailSubId, data.emailSubPlaceholder)
            .expanded-checkbox-list-margin
                +expanded-checkbox-list({
                        first:{
                            id: "first",
                            content: "Завтрак"
                        },
                        second:{
                            id: "second",
                            content: "Письменный стол",
                            checked: true
                        },
                        third:{
                            id: "third",
                            content: "Стул для кормления",
                            checked: true
                        },
                        fourth:{
                            id: "fourth",
                            content: "Кроватка",
                            checked: true
                        },
                        fifth:{
                            id: "fifth",
                            content: "Телевизор"
                        },
                        sixth:{
                            id: "sixth",
                            content: "Шампунь"
                        },
                        seventh:{
                            id: "seventh",
                            content: "Телевизор"
                        },
                        eighth:{
                            id: "eighth",
                            content: "Шампунь"
                        }})
        .flex-wrapper
            .flex-col
                .room-feature-margin  
                    +room-feature(data.roomFeatureComfort.ImgName, data.roomFeatureComfort.Header, data.roomFeatureComfort.Body)
                .room-feature-margin  
                    +room-feature(data.roomFeatureUdobstvo.ImgName, data.roomFeatureUdobstvo.Header, data.roomFeatureUdobstvo.Body)
            form(action="#").checkboxes
                h3.checkboxes__header Checkbox buttons
                .checkbox-margin
                    +checkboxes({
                        first:{
                            id: "first",
                            content: "Завтрак"
                        },
                        second:{
                            id: "second",
                            content: "Письменный стол",
                            checked: true
                        },
                        third:{
                            id: "third",
                            content: "Стул для кормления",
                            checked: true
                        }
                    })
            .radio-but
                h3.radio-but__headline Radio buttons
                p
                    +radio-button(data.radioId1, data.radioContent1, data.radioName)
                    +radio-button(data.radioId2, data.radioContent2, data.radioName)
            .toggle-but
                h3.toggle-but__headline Toggle
                .flex-wrapper
                    .toggle-button 
                    +toggle-button(data.toggleButtonId)
                    p.toggle-but__content Получать спецпредложения
        .flex-wrapper   
            .flex-column-wrapper 
                h3.flex-column-wrapper__headline like button
                +like-button(data.likeCount)
            .flex-column-wrapper
                h3.flex-column-wrapper__headline rate button
                +rate-button(data.ratingNumber0)
            .flex-column-wrapper
                +range-slider(data.rangeSliderLabel)
        .flex-wrapper
            .buttons-block
                h3.buttons-block__header Buttons
                .buttons-block__content    
                    .buttons-block__button-margin
                        +button(data.btnFillStyle, data.btnFillContent)  
                    .buttons-block__button-margin
                        +button(data.btnBorderStyle, data.btnBorderContent)    
                    .buttons-block__button-margin
                        a.link__purple(href='#') click me  
                    .buttons-block__button-margin
                        +button(data.btnLongStyle, data.btnLongContent)
            +pagination({
                content: "1 – 12 из 100+ вариантов аренды",
                header: "pagination"
            })
        .flex-wrapper
            .rich-checkbox-margin
                .rich-checkbox
                    h3.rich-checkbox__headline rich checkbox buttons
                    +rich-checkbox({
                        first:{
                            id: "first",
                            header: "Широкий коридор",
                            content: "Ширина коридоров в номере не менее 91 см."
                        },
                        second:{
                            id: "second",
                            header: "Помощник для инвалидов",
                            content: "На 1 этаже вас встретит специалист  и проводит до номера.",
                            checked: true
                        }
                    })
            .bullet
                h3.bullet____headline Bullet list
                +bullet-list({
                    pet: "Нельзя с питомцами",
                    party: "Без вечеринок и мероприятий",
                    check_time: "Время прибытия — после 13:00, а выезд до 12:00"
                }) 
        .flex-wrapper
            +review({
                name: "Мурад Сарафанов",
                date: "5",
                likes: "11",
                content: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
            })
            

