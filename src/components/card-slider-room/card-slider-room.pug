mixin slider-room({number='111', price='100', reviews='5', isLux=""}={})
    .room-slider
        .flexslider
            ul.slides
                li.slides__item
                    img.slides__img(src=require(`../components/card-slider-room/${number}-slide-1.jpg`))
                li.slides__item
                    img.slides__img(src=require(`../components/card-slider-room/${number}-slide-2.jpg`))
                li.slides__item
                    img.slides__img(src=require(`../components/card-slider-room/${number}-slide-3.jpg`))
                li.slides__item
                    img.slides__img(src=require(`../components/card-slider-room/${number}-slide-4.jpg`))
        a(href="./room-detail.html")
            .room-slider__price-headline
                p.room-slider__number
                    span.room-slider__num №
                    span.room-slider__number #{number}
                    span.room-slider__lux  #{isLux}
                p.room-slider__price= price +"₽ в сутки"
            .room-slider__rating
                +rate-button(number)                               
                p.room-slider__reviewsAmount <b>#{reviews}</b> Отзывов