                        a.header-buttons__mainMenu-link(href='#') About Us
                    li.header-buttons__mainMenu-item
                        a.header-buttons__mainMenu-link(href='#') Services
                    li.header-buttons__mainMenu-item
                        a.header-buttons__mainMenu-link(href='#') Careers
                    li.header-buttons__mainMenu-item
                        a.header-buttons__mainMenu-link(href='#') News
                    li.header-buttons__mainMenu-item
